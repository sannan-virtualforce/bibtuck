= form_for [:admin, @flagged_item] do |f|
  -if @flagged_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flagged_item.errors.count, "error")} prohibited this flagged_item from being saved:"
      %ul
        - @flagged_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item_id
    = f.text_field :item_id
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
