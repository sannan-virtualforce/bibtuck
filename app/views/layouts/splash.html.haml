!!!
%html{:style => "overflow: hidden;"}
  %head
    %title Bib + Tuck
    = csrf_meta_tag
    = favicon_link_tag
    = include_stylesheets :screen,  :media => 'screen, projection'
    = include_stylesheets :print,   :media => 'print'
    /[if IE]
      = include_stylesheets :ie,    :media => 'screen, projection'
    - if Rails.env.production?
      = render 'tracking/google_analytics'
    = yield :head
  %body{ :class => "splash #{'development' unless Rails.env.production? }"}
    = image_tag('logo_home.png', :id => 'logo')
    #coming-soon
      [coming soon-ish]
    #splash
      #slash-content
        = yield
      #splash_clear
    #splash_footer
      #footer
        = link_to(image_tag('splash/facebook.png'), "https://facebook.com/bibandtuck")
        = link_to(image_tag('splash/twitter.png'), "https://twitter.com/#{TWITTER_HANDLE}")
  :javascript
    window['sign-in'] = true;
  = include_javascripts :defaults
  :javascript
    $(document).ready(function() {
      $.backstretch('/images/background_home_cropped.jpg');
    });
