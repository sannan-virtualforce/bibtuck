= form_for @notification do |f|
  -if @notification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notification.errors.count, "error")} prohibited this notification from being saved:"
      %ul
        - @notification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :notifiable_type
    = f.text_field :notifiable_type
  .field
    = f.label :notifiable_id
    = f.text_field :notifiable_id
  .actions
    = f.submit 'Save'
